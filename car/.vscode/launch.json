{
     
             "version": "0.2.0",
             "configurations": [
                {
                     "name": "gcc.exe build and debug active file",
                    "type": "cppdbg",
                     "request": "launch",
                     "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
                 "args": [],
                    "stopAtEntry": false,
                    "cwd": "${workspaceFolder}",
                   "environment": [],
                 "externalConsole": true,      //修改此项，让其弹出终端
                    "MIMode": "gdb",
                    "miDebuggerPath": "D:\\MinGW64\\bin\\gcc.exe",
                    "setupCommands": [
                        {
                            "description": "Enable pretty-printing for gdb",
                            "text": "-enable-pretty-printing",
                            "ignoreFailures": true
                        }
                   ],
            "preLaunchTask": "task gcc" //修改此项
        }
    ]
 
}
